<h1><%= t(".title") %></h1>
<div class="list-group">
  <% @organizations.each do |o| %>
    <div class="row">
      <div class="col-10">
        <%= link_to o.name, new_organization_invoice_path(o), class: "list-group-item list-group-item-action" %>
      </div>
      <div class="col-2">
        <%= link_to t(".delete"), organization_path(o), method: :delete %>
        <br>
        <%= link_to t(".edit"), edit_organization_path(o) %>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-3 mb-2">
    <%= link_to t(".create"), new_organization_path, class: "btn btn-primary"%>
  </div>
</div>
